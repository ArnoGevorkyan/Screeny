<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ScreenTimeTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScreenTimeTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ScreenTimeTracker.Models"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.Resources>
            <local:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
            <local:NotNullToVisibleConverter x:Key="NotNullToVisibleConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Height="32" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image Source="Assets/app-icon.ico" 
                   Width="16" 
                   Height="16"
                   Margin="8,0,8,0"/>
            
            <TextBlock Text="Screen Time Tracker" 
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Style="{ThemeResource CaptionTextBlockStyle}"/>
        </Grid>

        <!-- Date Selection -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Spacing="8"
                    Margin="0,0,0,10">
            <TextBlock Text="Select Date:" 
                      VerticalAlignment="Center"/>
            <CalendarDatePicker x:Name="DatePicker"
                               PlaceholderText="Pick a date"
                               DateChanged="DatePicker_DateChanged"/>
                               
            <!-- Time Period Selector -->
            <TextBlock Text="View:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <ComboBox x:Name="TimePeriodSelector" 
                      SelectedIndex="0"
                      SelectionChanged="TimePeriodSelector_SelectionChanged"
                      Width="100">
                <ComboBoxItem Content="Daily"/>
                <ComboBoxItem Content="Weekly"/>
                <ComboBoxItem Content="Monthly"/>
            </ComboBox>
        </StackPanel>

        <!-- Control Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8">
                <Button x:Name="StartButton" 
                        Content="Start Tracking" 
                        Click="StartButton_Click"/>
                <Button x:Name="StopButton" 
                        Content="Stop Tracking" 
                        Click="StopButton_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- TabView for Data Display -->
        <TabView x:Name="DataTabView" 
                 Grid.Row="4"
                 SelectedIndex="0"
                 TabWidthMode="SizeToContent"
                 IsAddTabButtonVisible="False">
                 
            <!-- List View Tab -->
            <TabView.TabItems>
                <TabViewItem Header="Usage" IsClosable="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Summary Section (Moved from Summary Tab) -->
                        <Grid Grid.Row="0" 
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              BorderThickness="1"
                              CornerRadius="8"
                              Padding="20,16"
                              Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Summary Title -->
                            <TextBlock x:Name="SummaryTitle" 
                                      Text="Screen Time Summary" 
                                      Style="{ThemeResource BodyStrongTextBlockStyle}"
                                      VerticalAlignment="Center"
                                      Grid.Row="0"/>
                                      
                            <!-- Total Screen Time -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total:" 
                                          Style="{ThemeResource BodyTextBlockStyle}"
                                          VerticalAlignment="Center"
                                          Grid.Column="0"/>
                                <TextBlock x:Name="TotalScreenTime" 
                                          Text="0h 0m" 
                                          Style="{ThemeResource BodyStrongTextBlockStyle}"
                                          Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                          VerticalAlignment="Center"
                                          Grid.Column="1"/>
                            </Grid>
                            
                            <!-- Most Used App -->
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Most Used:" 
                                          Style="{ThemeResource BodyTextBlockStyle}"
                                          VerticalAlignment="Center"
                                          Grid.Column="0"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <TextBlock x:Name="MostUsedApp" 
                                              Text="None" 
                                              Style="{ThemeResource BodyStrongTextBlockStyle}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text=" " 
                                              VerticalAlignment="Center"
                                              Margin="4,0,0,0"/>
                                    <TextBlock x:Name="MostUsedAppTime" 
                                              Text="0h 0m" 
                                              Style="{ThemeResource BodyTextBlockStyle}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Daily Average (for weekly/monthly views) -->
                            <Grid Grid.Row="6"
                                 x:Name="AveragePanel"
                                 Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Daily Average:" 
                                          Style="{ThemeResource BodyTextBlockStyle}"
                                          VerticalAlignment="Center"
                                          Grid.Column="0"/>
                                <TextBlock x:Name="DailyAverage" 
                                          Text="0h 0m" 
                                          Style="{ThemeResource BodyStrongTextBlockStyle}"
                                          VerticalAlignment="Center"
                                          Grid.Column="1"/>
                            </Grid>
                        </Grid>
                        
                        <!-- App List -->
        <ListView x:Name="UsageListView" 
                                  Grid.Row="1"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                                  CornerRadius="8"
                                  ContainerContentChanging="UsageListView_ContainerContentChanging">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:AppUsageRecord">
                    <Grid Margin="12,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="264"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon with loading state -->
                        <Grid Grid.Column="0" Width="24" Height="24">
                                            <FontIcon x:Name="PlaceholderIcon"
                                                     Glyph="&#xECAA;"
                                     FontSize="16"
                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Visibility="Visible"/>
                                            <Image x:Name="AppIconImage"
                                                   Source="{x:Bind AppIcon, Mode=OneWay}"
                                                   Width="24"
                                                   Height="24"
                                                   Visibility="Collapsed"/>
                        </Grid>
                        
                        <TextBlock Text="{x:Bind ProcessName}" Grid.Column="2"/>
                        <TextBlock Text="{x:Bind FormattedDuration, Mode=OneWay}" Grid.Column="3"/>
                        <TextBlock Text="{x:Bind FormattedStartTime}" Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Header>
                <Grid Margin="12,12,12,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="264"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Application" Grid.Column="2" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Duration" Grid.Column="3" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Start Time" Grid.Column="4" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                </Grid>
            </ListView.Header>
        </ListView>
                    </Grid>
                </TabViewItem>
                
                <!-- Chart Tab -->
                <TabViewItem Header="Chart" IsClosable="False">
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1"
                          CornerRadius="8"
                          Padding="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Chart Title -->
                        <TextBlock x:Name="ChartTitle" 
                                   Text="Screen Time by Application" 
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                                   
                        <!-- LiveCharts Control -->
                        <lvc:CartesianChart 
                            x:Name="UsageChartLive"
                            Grid.Row="1"
                            MinHeight="400"
                            TooltipPosition="Top"
                            LegendPosition="Right">
                        </lvc:CartesianChart>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Window>
