<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ScreenTimeTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScreenTimeTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ScreenTimeTracker.Models"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:converters="using:Microsoft.UI.Xaml.Converters"
    xmlns:conv="using:ScreenTimeTracker"
    mc:Ignorable="d"
    Closed="Window_Closed">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <!-- Main container with fixed header and scrollable content -->
    <Grid Margin="20">
        <Grid.Resources>
            <conv:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
            <conv:NotNullToVisibleConverter x:Key="NotNullToVisibleConverter"/>
            <conv:DateDisplayConverter x:Key="DateDisplayConverter"/>
            <conv:ChartViewModeToLabelConverter x:Key="ChartViewModeToLabelConverter"/>
            <conv:BoolToTrackingTextConverter x:Key="BoolToTrackingTextConverter"/>
            <conv:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <conv:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <!-- Fixed header area -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <!-- Scrollable content area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FIXED HEADER: Title Bar -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Height="40" Margin="0,0,0,0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image Width="26" 
                   Height="26"
                   Margin="0,0,8,0" 
                   VerticalAlignment="Center">
                <Image.Source>
                    <SvgImageSource UriSource="/Assets/screeny.svg" />
                </Image.Source>
            </Image>
            
            <TextBlock Text="Screeny" 
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     FontSize="14" 
                     Style="{ThemeResource CaptionTextBlockStyle}"/>
        </Grid>

        <!-- FIXED HEADER: Date Selection and Control Buttons -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Date Label -->
                <ColumnDefinition Width="*"/>    <!-- Spacer -->
                <ColumnDefinition Width="Auto"/> <!-- Buttons -->
            </Grid.ColumnDefinitions>

            <!-- Date Section (Left) -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
                <TextBlock Text="Select Date:" VerticalAlignment="Center"/>
                <Button x:Name="DatePickerButton"
                       Content="{Binding SelectedDate, Converter={StaticResource DateDisplayConverter}}"
                       Command="{Binding PickDateCommand}"/>
            </StackPanel>

            <!-- Tracking indicator & hidden control buttons (Right) -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <!-- Hidden control buttons to preserve existing logic -->
                <Button x:Name="StartButton"
                        Content="Start Tracking"
                        Command="{Binding StartTrackingCommand}"
                        Visibility="Collapsed"/>
                <Button x:Name="StopButton"
                        Content="Stop Tracking"
                        Command="{Binding EndTrackingCommand}"
                        IsEnabled="False"
                        Visibility="Collapsed"/>

                <!-- Visible status indicator as a button -->
                <Button x:Name="TrackingStatusButton"
                        Padding="12,4"
                        MinHeight="32"
                        Command="{Binding ToggleTrackingCommand}"
                        VerticalAlignment="Center">
                    <Button.Resources>
                        <!-- Slow pulse storyboard for dot (scale only) -->
                        <Storyboard x:Name="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetName="DotTransform"
                                             Storyboard.TargetProperty="ScaleX"
                                             From="1" To="1.3" Duration="0:0:2" />
                            <DoubleAnimation Storyboard.TargetName="DotTransform"
                                             Storyboard.TargetProperty="ScaleY"
                                             From="1" To="1.3" Duration="0:0:2" />
                        </Storyboard>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Ellipse x:Name="PulseDot"
                                 Width="6" Height="6"
                                 Fill="{Binding IsTracking, Converter={StaticResource BoolToBrushConverter}}"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="DotTransform" ScaleX="1" ScaleY="1" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <TextBlock x:Name="TrackingStatusText"
                                   Text="{Binding IsTracking, Converter={StaticResource BoolToTrackingTextConverter}}"
                                   VerticalAlignment="Center"
                                   Style="{ThemeResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- SCROLLABLE CONTENT AREA -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Hidden"
                      VerticalScrollMode="Enabled"
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalScrollMode="Disabled"
                      ZoomMode="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chart Section -->
                <Grid Grid.Row="0" 
                      Grid.RowSpan="1"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      CornerRadius="8"
                      Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Chart Header with Toggle Options -->
                    <Grid Grid.Row="0" Margin="16,12,16,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" 
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Spacing="8">
                            <TextBlock x:Name="ChartTitleLabel" 
                                      Text="Usage Time:"
                                      Style="{ThemeResource BodyTextBlockStyle}"
                                      FontSize="14"
                                      Opacity="0.8"
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="ChartTimeValue" 
                                      Text="{Binding ChartTotalTimeDisplay}" 
                                      Style="{ThemeResource CaptionTextBlockStyle}"
                                      FontSize="12"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- View Toggle Buttons (similar to screenshot) -->
                        <Button x:Name="ViewModeToggle"
                                    Grid.Column="1"
                                Command="{Binding ToggleViewModeCommand}"
                                Style="{ThemeResource SubtleButtonStyle}"
                                Padding="8,4">
                            <TextBlock x:Name="ViewModeLabel"
                                      Text="{Binding CurrentChartViewMode, Converter={StaticResource ChartViewModeToLabelConverter}}" 
                                      VerticalAlignment="Center"
                                      Style="{ThemeResource CaptionTextBlockStyle}"/>
                        </Button>
                    </Grid>
                    
                    <!-- Loading indicator overlay -->
                    <ProgressRing x:Name="LoadingIndicator" 
                                IsActive="True" 
                                Grid.Row="1" 
                                Width="50" 
                                Height="50"
                                Visibility="Collapsed"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" />
                                
                    <!-- LiveCharts Control -->
                    <lvc:CartesianChart 
                        x:Name="UsageChartLive"
                        Grid.Row="1"
                        MinHeight="240"
                        TooltipPosition="Top">
                    </lvc:CartesianChart>
                </Grid>
                
                <!-- Summary Section -->
                <Grid Grid.Row="2" 
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      CornerRadius="8"
                      Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Summary Title - Separated header like in screenshot -->
                    <Grid Grid.Row="0" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="0,0,0,1"
                          Padding="20,12">
                        <TextBlock x:Name="SummaryTitle" 
                                  Text="{Binding SummaryTitle}" 
                                  Style="{ThemeResource BodyStrongTextBlockStyle}"
                                  VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Summary Content -->
                    <StackPanel Grid.Row="1" 
                                Padding="20,16"
                                Spacing="16">
                        
                        <!-- Total Time Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Glyph="&#xE916;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Total Screen Time" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalScreenTime" 
                                      Grid.Column="2" 
                                      Text="{Binding TotalScreenTimeDisplay}" 
                                      Style="{ThemeResource BodyStrongTextBlockStyle}"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Most Used App Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icon updates based on view model -->
                            <Grid Width="16" Height="16" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xECAA;" 
                                              FontSize="16"
                                          Visibility="{Binding HasNoMostUsedIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <Image x:Name="MostUsedAppIcon"
                                       Source="{Binding MostUsedAppIcon}"
                                       Visibility="{Binding HasMostUsedIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>

                                <TextBlock x:Name="MostUsedApp" 
                                       Grid.Column="1" 
                                       Text="{Binding MostUsedAppName}" 
                                       Margin="12,0,0,0" 
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="MostUsedAppTime" 
                                       Grid.Column="2" 
                                       Text="{Binding MostUsedAppDurationDisplay}" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Idle Time Row -->
                        <Grid x:Name="IdleRow" Visibility="{Binding IsIdleRowVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Glyph="&#xECCB;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Idle Time" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="IdleTimeValue" 
                                       Grid.Column="2" 
                                       Text="{Binding IdleDurationDisplay}" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Daily Average Row -->
                        <Grid x:Name="AveragePanel" Visibility="{Binding DailyAverageDisplay, Converter={StaticResource NotNullToVisibleConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Glyph="&#xF0E3;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Daily Average" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="DailyAverage" 
                                       Grid.Column="2" 
                                       Text="{Binding DailyAverageDisplay}" 
                                      Style="{ThemeResource BodyStrongTextBlockStyle}"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <!-- Spacer -->
                <Grid Grid.Row="3" Height="8"/>

                <!-- List Section -->
                <ListView x:Name="UsageListView" 
                          ItemsSource="{Binding Records}"
                          Grid.Row="4"
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1"
                          CornerRadius="8"
                          MaxHeight="300">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:AppUsageRecord">
                        <Grid Margin="12,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icon with loading state -->
                            <Grid Grid.Column="0" Width="24" Height="24">
                                    <FontIcon Glyph="&#xECAA;"
                                              FontSize="16"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="{Binding AppIcon, Converter={StaticResource NullToVisibleConverter}}"/>
                                    <Image Source="{x:Bind AppIcon, Mode=OneWay}"
                                           Width="24" Height="24"
                                           Visibility="{Binding AppIcon, Converter={StaticResource NotNullToVisibleConverter}}"/>
                            </Grid>
                            
                                <TextBlock Text="{x:Bind ProcessName}" Grid.Column="2" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left"/>
                                <TextBlock Text="{x:Bind FormattedDuration, Mode=OneWay}" Grid.Column="3" HorizontalAlignment="Left"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Header>
                    <Grid Margin="12,12,12,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                            <TextBlock Text="Application" Grid.Column="2" Style="{ThemeResource BodyStrongTextBlockStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Text="Duration" Grid.Column="3" Style="{ThemeResource BodyStrongTextBlockStyle}" HorizontalAlignment="Left"/>
                    </Grid>
                </ListView.Header>
            </ListView>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
