<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ScreenTimeTracker.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:models="using:ScreenTimeTracker.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Dashboard" 
                       Grid.Column="0"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       VerticalAlignment="Center"/>
            
            <CalendarDatePicker x:Name="DatePicker"
                                Grid.Column="1"
                                DateChanged="DatePicker_DateChanged"
                                PlaceholderText="Select date"/>
        </Grid>

        <!-- Stats Summary -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Total Screen Time -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,10,0"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Total Screen Time" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Opacity="0.7"/>
                    <TextBlock Text="{x:Bind ViewModel.FormattedTotalScreenTime, Mode=OneWay}" 
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Margin="0,8,0,0"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            
            <!-- Average Screen Time -->
            <Border Grid.Column="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="5,0,5,0"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Average Screen Time (Weekly)" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Opacity="0.7"/>
                    <TextBlock Text="{x:Bind ViewModel.FormattedAverageScreenTime, Mode=OneWay}" 
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Margin="0,8,0,0"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            
            <!-- Most Used App -->
            <Border Grid.Column="2" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="10,0,0,0"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Most Used App" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Opacity="0.7"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="{x:Bind ViewModel.MostUsedApp, Mode=OneWay}" 
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text=" (" 
                                   Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.FormattedMostUsedAppTime, Mode=OneWay}" 
                                   Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBlock Text=")" 
                                   Style="{ThemeResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- App Usage Pie Chart -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,10,0"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="{x:Bind ViewModel.TimeRangeSummary, Mode=OneWay}" 
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16"/>
                    
                    <lvc:PieChart Grid.Row="1"
                                 Series="{x:Bind ViewModel.AppUsageSeries, Mode=OneWay}"
                                 MinHeight="200"/>
                    
                    <ItemsControl Grid.Row="2" 
                                 ItemsSource="{x:Bind ViewModel.TopApps, Mode=OneWay}"
                                 Margin="0,16,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:AppUsageRecord">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{x:Bind ProcessName}" 
                                               Grid.Column="0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Bind FormattedDuration}" 
                                               Grid.Column="1"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
            
            <!-- Weekly Usage Chart -->
            <Border Grid.Column="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="10,0,0,0"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Weekly Screen Time" 
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16"/>
                    
                    <lvc:CartesianChart Grid.Row="1"
                                       Series="{x:Bind ViewModel.WeeklyUsageSeries, Mode=OneWay}"
                                       XAxes="{x:Bind CreateWeeklyXAxis(), Mode=OneTime}"
                                       MinHeight="300"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0"
                    Spacing="12">
            <Button Content="Export Data" 
                    Click="ExportButton_Click">
                <Button.Icon>
                    <FontIcon Glyph="&#xE74E;"/>
                </Button.Icon>
            </Button>
            <Button Content="Monthly Report" 
                    Click="MonthlyReportButton_Click">
                <Button.Icon>
                    <FontIcon Glyph="&#xE8EC;"/>
                </Button.Icon>
            </Button>
            <Button Content="Back" 
                    Click="BackButton_Click">
                <Button.Icon>
                    <FontIcon Glyph="&#xE72B;"/>
                </Button.Icon>
            </Button>
        </StackPanel>
    </Grid>
</Page> 