<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap rescap">

  <Identity
    Name="ScreenTimeTrackerApp"
    Publisher="CN=Developer"
    Version="1.0.0.0" />

  <Properties>
    <DisplayName>Screeny</DisplayName>
    <PublisherDisplayName>Developer</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.22621.0" />
    <!-- Make sure MinVersion matches your project setting -->
     <PackageDependency Name="Microsoft.WindowsAppRuntime.1.5" MinVersion="5001.138.2003.0" Publisher="CN=Microsoft Corporation, O=Microsoft Corporation, L=Redmond, S=Washington, C=US" />
  </Dependencies>

  <Resources>
    <Resource Language="x-generate"/>
  </Resources>

  <Applications>
    <Application Id="App"
      Executable="$targetnametoken$.exe"
      EntryPoint="$targetentrypoint$">
      <uap:VisualElements
        DisplayName="Screeny"
        Description="Tracks screen time per application."
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">
        <!-- Add actual paths to your logo assets -->
        <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png" />
        <uap:SplashScreen Image="Assets\SplashScreen.png" />
      </uap:VisualElements>

      <!-- Startup Task Extension -->
      <Extensions>
         <uap:Extension Category="windows.startupTask" Executable="$targetnametoken$.exe" EntryPoint="$targetentrypoint$">
            <uap:StartupTask TaskId="ScreenyStartupTask" Enabled="true" DisplayName="Screeny Screen Time Tracker" />
         </uap:Extension>
      </Extensions>
      <!-- End Startup Task Extension -->

    </Application>
  </Applications>

  <Extensions>
    <Extension Category="windows.startupTask"
                 Executable="Screeny.exe" 
                 EntryPoint="ScreenTimeTracker.App">
      <StartupTask TaskId="ScreenyStartupTask" 
                   Enabled="true" 
                   DisplayName="Screeny Screen Time Tracker" />
    </Extension>
  </Extensions>

  <Capabilities>
    <!-- Required for network access if needed, leave if unsure -->
    <Capability Name="internetClient" />
     <!-- Required for WinUI 3 Desktop apps -->
     <rescap:Capability Name="runFullTrust" />
     <!-- Required for APIs like GetForegroundWindow, GetWindowText -->
     <rescap:Capability Name="unvirtualizedResources" />
  </Capabilities>
</Package> 