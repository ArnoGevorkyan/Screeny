<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ScreenTimeTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScreenTimeTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ScreenTimeTracker.Models"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.Resources>
            <local:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid x:ConnectionId='2' x:Name="AppTitleBar" Grid.Row="0" Height="32" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Screen Time Tracker" 
                     VerticalAlignment="Center"
                     Style="{ThemeResource CaptionTextBlockStyle}"
                     Margin="8,0"/>
        </Grid>

        <!-- Date Selection -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Spacing="8"
                    Margin="0,0,0,10">
            <TextBlock Text="Select Date:" 
                      VerticalAlignment="Center"/>
            <CalendarDatePicker x:ConnectionId='13' x:Name="DatePicker"
                               PlaceholderText="Pick a date"
                                                                   />
        </StackPanel>

        <!-- Control Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8">
                <Button x:ConnectionId='11' x:Name="StartButton" 
                        Content="Start Tracking" 
                                                 />
                <Button x:ConnectionId='12' x:Name="StopButton" 
                        Content="Stop Tracking" 
                                                
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Usage List -->
        <ListView x:ConnectionId='3' x:Name="UsageListView" 
                  Grid.Row="4"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8">
            <ListView.ItemTemplate>
                <DataTemplate                                   >
                    <Grid x:ConnectionId='5' Margin="12,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="264"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon with loading state -->
                        <Grid Grid.Column="0" Width="24" Height="24">
                            <Image x:ConnectionId='9'                        
                                   Width="24" 
                                   Height="24"
                                   Stretch="Uniform"/>
                            <ProgressRing x:ConnectionId='10'                                               
                                         Width="16" 
                                         Height="16"/>
                            <FontIcon Glyph="&#xE9CE;"
                                     Visibility="{Binding Icon, Converter={StaticResource NullToVisibleConverter}}"
                                     FontSize="16"/>
                        </Grid>
                        
                        <TextBlock x:ConnectionId='6'                             Grid.Column="2"/>
                        <TextBlock x:ConnectionId='7'                                   Grid.Column="3"/>
                        <TextBlock x:ConnectionId='8'                                    Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Header>
                <Grid Margin="12,12,12,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="264"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Application" Grid.Column="2" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Duration" Grid.Column="3" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Start Time" Grid.Column="4" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                </Grid>
            </ListView.Header>
        </ListView>
    </Grid>
</Window>

